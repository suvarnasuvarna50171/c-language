#include <stdio.h>
#include <stdlib.h>
int compare(const void *a,const void *b){
    return (*(int*)a - *(int*)b);
}

int main() {
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i = 0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    qsort(arr,n,sizeof(int),compare);
    int minPartition = arr[n - 1] - arr[0];
    for(int i = 1;i<n;i++){
        int partitionValue = arr[i] - arr[i-1];
        if(partitionValue < minPartition){
            minPartition = partitionValue;
        }
    }
    printf("%d\n",minPartition);

    return 0;
}
