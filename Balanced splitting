#include <stdio.h>
#include <stdlib.h>
int balancedStringSplit(char *s){
    int count = 0;
    int balance = 0;
    for(int i = 0;s[i]!='\0';i++){
        if(s[i] == 'L'){
            balance += 1;
        }else{
            balance -=1;
        }
        if (balance == 0){
            count +=1;
        }
    }
    return count;
}

int main() {
    char s[1000];
    scanf("%s",s);
    printf("%d\n",balancedStringSplit(s));
    return 0;
}
