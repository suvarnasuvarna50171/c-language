#include <stdio.h>
#include <stdlib.h>
int longestcontiguousOnes(int arr[],int n){
    int maxCount = 0;
    int count = 0;
    for(int i = 0;i<n;i++){
        if(arr[i] == 1){
            count++;
            if(count > maxCount){
                maxCount = count;
            }
        }else{
            count = 0;
        }
    }
    return maxCount;
}

int main() {
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }

     int result = longestcontiguousOnes(arr,n);
     printf("%d\n",result);
    return 0;
}
